<div class="jcr-content">
  <div class="form-container">
    <h1 class="h3 mb-4">Users</h1>
    <table class="jcr-table mb-5 table table-bordered">
      <thead>
        <tr class="row jcr-row">
          <th class="col-3">
            Email
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each emails}}
          <tr class="row jcr-row">
            <td class="col-3">
              {{email}}
              <form
                action="/admin/users/{{id}}/delete"
                class="d-inline-block ml-3"
                data-form-delete="Are you sure you want to delete this email address?"
                method="post"
              >
            </td>
            <td class="col-6 col-md-3 text-center">

                <button class="btn btn-danger btn-sm" type="submit">
                  Delete
                </button>
              </form>
              </tr>
            </td>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
